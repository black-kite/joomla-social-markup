<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade">
	<name>Social Markup</name>
	<author>Milan Gress</author>
	<creationDate>July 2015</creationDate>
	<copyright>Copyright (C) 2009 - 2015 Die Marketingmacher. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl.html GNU/GPL v3</license>
	<authorUrl>www.die-marketingmacher.com</authorUrl>
	<authorEmail>milan@die-marketingmacher.com</authorEmail>
	<version>0.0.1</version>
	<description>Social Markup - Social SEO - add markup for social media></description>
	<files>
		<filename plugin="socialmarkup">socialmarkup.php</filename>
		<filename>index.html</filename>
		<filename>socialmarkup.css</filename>
	</files>
	<languages>
		<language tag="en-GB">admin/language/en-GB/en-GB.plg_content_socialmarkup.ini</language>
		<language tag="en-GB">admin/language/en-GB/en-GB.plg_content_socialmarkup.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="FIELDSET_OGRAPHRAPH">
				<field name="spacer" type="spacer" class="text"
					label="COM_PLUGINS_FIELDSET_OGRAPHRAPH_FIELDSET_LABEL"/>

				<field type="list" name="og_include_all" default="yes" label="OGRAPH_INCLUDE_ALL" description="OGRAPH_INCLUDE_ALL_DESC">
					<option value="yes">JYES</option>
					<option value="no">JNO</option>
				</field>
				<field type="category" name="og_category_apply" default="" label="OGRAPH_CATEGORY_APPLY" description="OGRAPH_CATEGORY_APPLY_DESC" extension="com_content" multiple="true" size="5"/>
				<field type="list" name="og_include_featured" default="yes" label="OGRAPH_INCLUDE_FEATURED" description="OGRAPH_INCLUDE_FEATURED_DESC">
					<option value="yes">JYES</option>
					<option value="no">JNO</option>
				</field>
				<field type="text" name="og_app_id" default="" label="APP_ID_OGRAPH" description="APP_ID_OGRAPH_DESC" />
				<field type="media" name="og_image" default="" label="DEFAULT_IMAGE_OGRAPH" description="DEFAULT_IMAGE_OGRAPH_DESC" directory="" preview="true" />
				<field type="text" name="og_author_url" default="" label="AUTHOR_URL_OGRAPH" description="AUTHOR_URL_OGRAPH_DESC" />
				<field type="text" name="og_description_limit" default="140" label="OGRAPH_DESCRIPTION_LIMIT" description="OGRAPH_DESCRIPTION_LIMIT_DESC" />
				<field type="list" name="og_cummulative_keywords" default="yes" label="OGRAPH_CUMMULATIVE_KEYWORDS" description="OGRAPH_CUMMULATIVE_KEYWORDS_DESC">
					<option value="yes">JYES</option>
					<option value="no">JNO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
